@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <br />

    <div class="row">
        <form>
            <div class="form-group col-6">
                <label for="exampleInputEmail1">First Number</label>
                <input type="text" class="form-control" id="first" >
               
            </div>
            <div class="form-group col-6">
                <label for="exampleInputPassword1">Second Number</label>
                <input type="text" class="form-control" id="second" >
            </div>
            
            <br />
              <button id="butn" type="submit" class="btn btn-success">Submit</button>
            
        </form>
    </div>

</div>
<div id="show">

</div>

<script>
    $(document).ready(() => {
       // alert("hello");
     

        $("#butn").click(() => {
            var num1 = parseInt($("#first").val());
            var num2 = parseInt($("#second").val());
            // var res = num1 + num2;
            // alert("Addition Is: " + res);
            $.ajax({
                type: "POST",
                url: "@Url.Action("Cal", "Home")",
                data: { x: num1, y: num2 },
                success: function (res) {

                    console.log(res);
                    alert(res);
                  

                },
                error: function (req, status, error) {
                    alert("Failed");
                }
            });

        });
       

    });
</script>